
<h2 class="mt-4">Recently Posts</h2>
<div class="table-responsive small pt-2">
  <% if (posts.length > 0) { %>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Row</th>
          <th scope="col">Title</th>
          <th scope="col">AuthorId</th>
          <th scope="col">Date</th>
          <th scope="col">Condition</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% for ( let index = 0; index < posts.length; index++ ) { %>
          <tr class="m-2">
            <td class="p-2">
              <span class="badge text-bg-secondary"><%= index+1 %></span>
            </td>
            <td class="p-2">
              <a href="#">
                <h6 class="mb-0">
                  <%= posts[index].title %> 
                </h6>
              </a>
            </td>
            <td class="p-2"> <%= posts[index].user %> </td>
            <td class="p-2">
              <span class="badge text-bg-success">
                <%= posts[index].createdAt.toLocaleDateString('fa-IR-u-nu-latn') %>
              </span>
            </td>
            <td class="p-2">
              <% if(posts[index].status==="public") { %>
                <span class="badge text-bg-primary">Public</span>
              <% } else { %>
                <span class="badge text-bg-warning">Private</span>
              <% } %>
            </td>
            <td class="p-2">
              <a href="/admin/edit-post/<%= posts[index].id %>">
                <span class="badge text-bg-info">Edit</span>
              </a>
              <a href="/admin/delete-post/<%= posts[index].id %>">
                <span class="badge text-bg-danger">Delete</span>
              </a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <%- include("../../../components/pagination.ejs") %>
  <% } else { %>
    <p class="mt-3"> Unfortunately! There is nothing in database for you !</p>
  <% } %>
</div>