<form
  action="/admin/add-post"
  method="post"
  class="needs-validation"
  novalidate
  enctype="multipart/form-data"
>
  <h1 class="my-4">Add Post Form</h1>
  <% if(typeof errors !== "undefined" && errors.length > 0) { %>
    <% for( let index = 0; index < errors.length; index++ ) { %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <div><%= errors[index] %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  <% } %>
  <div class="form-row">
    <div class="col-md-4">
      <div> Thumbnail : </div>
      <div class="my-3">
        <div class="input-group">
          <div>
            <input
              name="thumbnail"
              type="file"
              class="form-control"
              id="thumbnail"
            />
          </div>
        </div>
        <div class="d-flex">
          <div id="image-status" class="mt-2 mx-2 text-primary"> File Not Selected Yet !</div>
          <button id="post-ing-upload-success-btn" class="btn btn-sm btn-success mt-1" style="display: none;">
            Text Copied !
          </button>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationTooltip01">Title :</label>
      <input
        name="title"
        type="text"
        class="form-control mt-2"
        id="validationTooltip01"
        placeholder="Title"
        required
      />
      <div class="valid-tooltip">Looks good!</div>
    </div>
    <div class="col-md-4 mb-3">
      <label for="statusSelect">Status :</label>
      <select id="statusSelect" name="status" class="form-select mt-2" aria-label="Default select example">
        <option value="public" selected> public </option>
        <option value="private"> private </option>
      </select>
    </div>
    <div class="col-md-4">
      <div> Upload Your Image : </div>
      <div class="my-3">
        <div class="input-group">
          <div>
            <input
              name="upload-img-post"
              type="file"
              class="form-control"
              id="upload-img-post"
            />
          </div>
          <div class="input-group-prepend">
            <button
              id="btn-upload-post-img" 
              class="btn btn-outline-primary" 
              type="button"
            >
              Upload
            </button>
          </div>
        </div>
        <div class="d-flex">
          <div id="image-status" class="mt-2 mx-2 text-primary"> File Not Selected Yet !</div>
          <button id="post-ing-upload-success-btn" class="btn btn-sm btn-success mt-1" style="display: none;">
            Text Copied !
          </button>
        </div>
      </div>
      <div style="display: none;" id="post-progress" class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
        <div id="post-progress-bar" class="progress-bar progress-bar-striped progress-bar-animated"></div>
      </div>
    </div>
    <div class="mb-3">
      <label for="body" class="form-label"
        >Post body :</label
      >
      <textarea
        name="body"
        placeholder="Add your post body here !"
        class="form-control"
        id="body"
        rows="3"
      ></textarea>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit Form</button>
</form>
